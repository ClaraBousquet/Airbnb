{# {% extends 'base.html.twig' %} 
{% block title %}Réserver{% endblock %}

{% block body %}

<form class="booking-form" action="#" method="post">
  <div class="elem-group">
    <label for="name">Votre Nom</label>
    <input type="text" id="name" name="visitor_name" placeholder="John Doe" pattern=[A-Z\sa-z]{3,20} required>
  </div>
  <div class="elem-group">
    <label for="email">Votre addresse E-mail</label>
    <input type="email" id="email" name="visitor_email" placeholder="john.doe@email.com" required>
  </div>
  <div class="elem-group">
    <label for="phone">Votre téléphone</label>
    <input type="tel" id="phone" name="visitor_phone" placeholder="0602030405" pattern=(\d{3})-?\s?(\d{3})-?\s?(\d{4}) required>
  </div>
  <hr>
  <div class="elem-group inlined">
    <label for="adult">Nombre d'adultes</label>
    <input type="number" id="adult" name="total_adults" placeholder="2" min="1" required>
  </div>
  <div class="elem-group inlined">
    <label for="child">Nombre d'enfants</label>
    <input type="number" id="child" name="total_children" placeholder="2" min="0" required>
  </div>
  <div class="elem-group inlined">
    <label for="checkin-date">Date d'arrivée</label>
    <input type="date" id="checkin-date" name="checkin" required>
  </div>
  <div class="elem-group inlined">
    <label for="checkout-date">Date de départ</label>
    <input type="date" id="checkout-date" name="checkout" required>
  </div>
  
  <hr>
  <div class="elem-group">
    <label for="message">Autre chose ?</label>
    <textarea id="message" name="visitor_message" placeholder="Faites nous savoir si il ya quelque chose qui pourrait être important" required></textarea>
  </div>
  <button class="btn btn-danger"type="submit">Réserver la chambre <a href="{{ path('reservationConf')}}"></a></button>
</form>



{% endblock %} #}