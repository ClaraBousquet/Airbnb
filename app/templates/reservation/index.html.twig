{% extends 'base.html.twig' %}

{% block title %}Mes Réservations{% endblock %}

{% block body %}
    <h1 class="title">Mes Réservations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Date d'arrivée</th>
                <th>Date de départ</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td class="tab">{{ reservation.startDate ? reservation.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservation.endDate ? reservation.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-danger" href="{{ path('app_reservation_show', {'id': reservation.id}) }}">Détails</a>
                    <a class="btn btn-danger" href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}">Nouvelle Réservation</a>
{% endblock %}
